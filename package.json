{
  "name": "@jymfony/kumis",
  "description": "A powerful asynchronous templating engine (jinja2 inspired)",
  "version": "0.1.0-dev",
  "author": "Alessandro Chitolina <alekitto@gmail.com>",
  "engines": {
    "node": ">= 8.10.0"
  },
  "scripts": {
    "test:instrument": "nyc npm run test:runner",
    "test:runner": "./tests.js tests/*.js tests/**/*.js",
    "test": "npm run test:runner"
  },
  "flat": true,
  "main": "index",
  "dependencies": {
    "@jymfony/autoloader": "^0.1.0-alpha.16",
    "@jymfony/cache": "^0.1.0-alpha.16",
    "@jymfony/datastructure": "^0.1.0-alpha.16",
    "@jymfony/exceptions": "^0.1.0-alpha.16",
    "@jymfony/filesystem": "^0.1.0-alpha.16",
    "@jymfony/util": "^0.1.0-alpha.16"
  },
  "devDependencies": {
    "@jymfony/debug": "^0.1.0-alpha.16",
    "@jymfony/var-dumper": "^0.1.0-alpha.16",
    "chai": "^4.2.0",
    "mocha": "*",
    "nyc": "^14.1.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jymfony/kumis.git"
  },
  "config": {
    "jymfony-autoload": {
      "namespaces": {
        "Kumis": "src/"
      }
    }
  },
  "keywords": [
    "template",
    "templating"
  ],
  "license": "BSD-2-Clause",
  "bugs": {
    "url": "https://github.com/jymfony/kumis/issues"
  },
  "nyc": {
    "per-file": true,
    "hookRequire": true,
    "hookRunInContext": true,
    "hookRunInThisContext": true,
    "include": [
      "src/**/*.js",
      "src/*.js"
    ],
    "exclude": [
      "**/tests.js",
      "**/*Interface.js",
      "**/namespace-stub.js",
      "**/fixtures/**",
      "**/tests/**"
    ],
    "reporter": [
      "clover",
      "lcov",
      "text-summary"
    ],
    "all": true,
    "report-dir": "./coverage"
  },
  "resolutions": {
    "debug": "4.1.1",
    "glob": "7.1.4",
    "ms": "2.1.2",
    "supports-color": "6.1.0",
    "yargs": "13.2.4",
    "yargs-parser": "13.1.1",
    "minimist": "0.0.10",
    "semver": "6.2.0",
    "string-width": "3.1.0",
    "is-fullwidth-code-point": "2.0.0",
    "strip-ansi": "5.2.0",
    "ansi-regex": "4.1.0",
    "cliui": "5.0.0",
    "get-caller-file": "2.0.5",
    "require-main-filename": "2.0.0",
    "wrap-ansi": "5.1.0",
    "cross-spawn": "6.0.5",
    "pify": "4.0.1",
    "source-map": "0.6.1"
  }
}
